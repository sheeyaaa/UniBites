<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ðŸ”¸ Header: Logo and Back -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical|center_vertical"
                android:paddingBottom="8dp">

                <ImageView
                    android:id="@+id/back_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/back_icon"
                    android:contentDescription="@string/back" />

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:src="@drawable/unibiteslogo" />
            </LinearLayout>

            <!-- Container for cart items -->
            <LinearLayout
                android:id="@+id/itemsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">
                
                <!-- Items will be added here dynamically -->
            </LinearLayout>

            <!-- ðŸ§¾ Summary Box -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/claculation_box"
                android:layout_marginTop="16dp"
                android:padding="12dp">

                <!-- "To Pay â‚¹ xx.xx" Text Centered -->
                <TextView
                    android:id="@+id/totalPayTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="To Pay â‚¹ 0.00"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Including all taxes and charges"
                    android:gravity="center"
                    android:textColor="#888888"
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp" />

                <!-- Grey Divider Line  -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Item"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp" />
                        
                    <TextView
                        android:id="@+id/itemTotalTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹ 0.00"
                        android:textSize="16sp"
                        android:layout_marginEnd="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">
                    
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="GST"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp" />
                        
                    <TextView
                        android:id="@+id/gstTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹ 0.00"
                        android:textSize="16sp"
                        android:layout_marginEnd="16dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#FF8C42"
                    android:layout_marginTop="6dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">
                    
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Grand Total"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp" />
                        
                    <TextView
                        android:id="@+id/grandTotalTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹ 0.00"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="16dp" />
                </LinearLayout>
            </LinearLayout>
            
            <!-- Payment Methods Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose Payment Method"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FF6D3A"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />
            
            <!-- QR Code Payment Option -->
            <Button
                android:id="@+id/qrPayButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/rounded_button_bg"
                android:backgroundTint="#FF6D3A"
                android:padding="12dp"
                android:text="Pay Using QR Code"
                android:textAllCaps="false"
                android:textColor="#FFFFFF" />
                
            <!-- UPI ID Payment Option -->
            <Button
                android:id="@+id/upiPayButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_button_bg"
                android:backgroundTint="#E0E0E0"
                android:padding="12dp"
                android:text="Pay Using UPI ID"
                android:textAllCaps="false"
                android:textColor="#333333" />
                
            <!-- Card Payment Option -->
            <Button
                android:id="@+id/cardPayButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_button_bg"
                android:backgroundTint="#E0E0E0"
                android:padding="12dp"
                android:text="Pay Using Card"
                android:textAllCaps="false"
                android:textColor="#333333" />
        </LinearLayout>
    </ScrollView>
        
    <!-- Footer with fixed position at bottom -->
    <include
        android:id="@+id/footer"
        layout="@layout/footer_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
